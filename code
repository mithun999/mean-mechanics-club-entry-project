// C++ code
#include <Servo.h>
int dist = 0;
int position=0;
Servo myservo;
void setup()
{ myservo.attach(6) ;
  pinMode(5, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(10,INPUT);
  
}

void loop()
{
  myservo.write(0);
  digitalWrite(8,LOW);       
  digitalWrite(8,HIGH);        
  digitalWrite(8,LOW); 
  dist=pulseIn(10,HIGH);      
  dist = dist/58;
  if(dist<150)
  {
    //to go back
    delay(1000);
    digitalWrite(5,HIGH);
    digitalWrite(4,LOW);
    digitalWrite(3,HIGH);
    delay(1000);
    //turn left
    myservo.write(30);
    //move forward
    delay(1000);
    digitalWrite(5,HIGH);
    digitalWrite(4,HIGH);
    digitalWrite(3,LOW);
    delay(1000);
  
  }
 
  { if(dist>=150)
    //move forward
    delay(1000);
    digitalWrite(5,HIGH);
    digitalWrite(4,HIGH);
    digitalWrite(3,LOW);
    delay(1000);
  }
}
